@model List<Laptop>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SeYu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <style>
        .flexbox-container {
            display: flex;
            /*align-items:center;*/
            align-items:stretch;

           
        }
        .box-1{
            width:280px;
        }
        .box-2{
            width:max-content;
            flex-grow:1;
        }
        
    </style>
    
   
    
</head>
<body>

    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Seyu</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Çok Satan</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">En Düşük Fiyat</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link " href="#">En yüksek Fiyat </a>

                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="#">En Yüksek Puan</a>
                    </li>
                </ul>
                <form class="d-flex position-absolute top-50 start-50 translate-middle" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
                <a class="nav-link " href="#">Admin</a>
            </div>
        </div>
    </nav>

    <div class="flexbox-container">
        <div class="flexbox-item box-1 d-flex flex-column flex-shrink-0 p-3 bg-light" >
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item text-center">
                    <input class="form-check-input" type="checkbox" value="Asus" name="Asus">
                    <label class="form-check-label " for="flexCheckDefault">
                        Asus
                    </label>
                </li>
                <br />
                <li class="nav-item text-center">
                    <input class="form-check-input" type="checkbox" value="Lenovo" name="Lenovo">
                    <label class="form-check-label" for="flexCheckDefault">
                        Lenovo
                    </label>
                </li>
                <br />
                <li class="nav-item text-center">
                    <input class="form-check-input" type="checkbox" value="Monster" name="Monster">
                    <label class="form-check-label" for="flexCheckDefault">
                        Monster
                    </label>
                </li>
                <br />
                <li class="nav-item text-center">
                    <input class="form-check-input" type="checkbox" value="Msi" name="Msi">
                    <label class="form-check-label" for="flexCheckDefault">
                        Msi
                    </label>
                </li>
                <br />
                <li class="nav-item text-center">
                    <input class="form-check-input" type="checkbox" value="Apple" name="Apple">
                    <label class="form-check-label" for="flexCheckDefault">
                        Apple
                    </label>
                </li>
                <br />
                <li class="nav-item text-center">
                    <input class="form-check-input" type="checkbox" value="Hp" name="Hp">
                    <label class="form-check-label" for="flexCheckDefault">
                        Hp
                    </label>
                    </li >
                    <br />
                <li class="text-center">
                    <input class="btn btn-outline-success " type="submit">
                    
                </li>
                 
            </ul>
        </div>
        <div class="flexbox-item box-2" style="width:1500px;">
            <ul class="nav nav-pills flex-column mb-auto">
                @foreach (var item in Model)
                {
                    <li>
                        <div class="card mb-3" >
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="@item.Resim" class="img-fluid rounded-start" alt="...">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h2>@item.Marka</h2>
                                        <a class="card-title" href="@item.Url">@item.Baslik</a>
                                        <p class="card-text" style="color:orange":">@item.Fiyat TL</p>
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                }


        </div>
    </div>
</body>

</html>